#
# wm independent hotkeys
#

# terminal emulator
super + Return
	alacritty

# program launcher
super + shift + Return
  rofi -show drun -show-icons -icon-theme "Papirus"

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# preselect the direction
super + alt + {h,j,k,l}
	bspc node -p {west,south,north,east}

# resize
super + ctrl + {h,j,k,l}
	bspc node -z {left -50 0 || bspc node -z right -50 0, \
								bottom 0 50 || bspc node -z top 0 50,\
								top 0 -50 || bspc node -z bottom 0 -50,\
								right 50 0 || bspc node -z left 50 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-50 0,0 50,0 -50,50 0}

# kill
super + shift + c
	bspc node -c

# powermenu
super + shift + q
	rofi -show p -modi "p:rofi-power-menu --choices=shutdown/suspend/reboot"

# restart
super + shift + r 
	bspc wm -r

# next layout
super + space
	bspc desktop -l next

# swap the current node and the biggest window
super + g
	bspc node -s biggest.window

#
# state/flags
#

# set the window state
super + alt + shift {t, s, f}
	bspc node -t {tiled, floating,fullscreen}

#
# focus/swap
#

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus or send to the given desktop
super + {_,shift + }{a, s, d, f, u, i , o, p}
	bspc {desktop -f,node -d} '^{1, 2, 3, 4, 5, 6, 7, 8}'

#
# volume control
#
XF86AudioLowerVolume
	amixer -q set Master 5%-

XF86AudioRaiseVolume
	amixer -q set Master 5%+

XF86AudioMute
	amixer -q set Master toggle

#
# screenshots
#
Print
	flameshot full -p ~/pictures/screenshots

Print + shift 
	flameshot gui

#
# apps
#
super + alt + {e, b}
  {emacsclient -c -a 'emacs' --eval '(dashboard-refresh-buffer)', qutebrowser}

super + alt + {v, n, c, a, m, t}
  alacritty -e {nvim, alsamixer, cmus, ani-cli, manga-cli, gtop}

#
# rofi scripts
#
super + r ; {r, c, w, s, e, p} 
  {rofi -show-icons -icon-theme "Papirus" -show run, rofi -show calc -modi calc -no-how-match -no-sort, ~/.config/rofi/scripts/wifi.sh, ~/.config/rofi/scripts/websearch.sh, ~/.config/rofi/scripts/confedit.sh, rofi-pass}
